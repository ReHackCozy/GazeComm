<Window x:Class="Gaze.HomePanel.HomePanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gaze.HomePanel"
        xmlns:eyeX="clr-namespace:EyeXFramework.Wpf;assembly=EyeXFramework"
        xmlns:autocomplete="clr-namespace:Gaze.EyeTracker"
        KeyUp="Window_KeyUp"
        mc:Ignorable="d"
        Title="HomePanel" Height="768" Width="1280" WindowState="Maximized">
    
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#373737" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="./#Segoe UI" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="50"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <Grid>
                                <Path x:Name="PathIcon" Width="15" Height="25" Stretch="Fill" Fill="#4C87B3" HorizontalAlignment="Left" Margin="17,0,0,0" />
                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E59400" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="OrangeRed" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="DarkGray">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- HEADER START -->
        <Grid Name="HeaderLeft" Grid.Row="0" Grid.Column="0" Background="Gray">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock Text="{Binding Name}"  Foreground="White" FontWeight="Bold" FontSize="20" Margin="5,0,0,0"/>

                </Grid>

                <Grid Grid.Column="1" Margin="1,2,1,2">
                    <TextBox Text="{Binding PhoneNumber}" Foreground="White" FontWeight="Bold" FontSize="20" Margin="5,0,0,0" Background="DarkGray" BorderThickness="0"/>
                </Grid>

            </Grid>
            
        </Grid>

        <Grid Name="HeaderRight" Grid.Row="0" Grid.Column="1" Background="Gray">
            <TextBlock Text="Suggestion" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Foreground="White"/>
        </Grid>
        <!-- HEADER END -->
        
        <!--BODY START-->
        <Grid Grid.Row="1" Grid.Column="0">

            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Q"/>
                    <Button Content="W"/>
                    <Button Content="E"/>
                    <Button Content="R"/>
                    <Button Content="T"/>
                    <Button Content="Y"/>
                    <Button Content="U"/>
                    <Button Content="I"/>
                    <Button Content="O"/>
                    <Button Content="P"/>
                    <Button Content="A"/>
                    <Button Content="S"/>
                    <Button Content="D"/>
                    <Button Content="F"/>
                    <Button Content="G"/>
                    <Button Content="H"/>
                    <Button Content="J"/>
                    <Button Content="K"/>
                    <Button Content="L"/>
                    <Button Content="ENTER" Width="150"/>
                    <Button Content="Z"/>
                    <Button Content="X"/>
                    <Button Content="C"/>
                    <Button Content="V"/>
                    <Button Content="B"/>
                    <Button Content="N"/>
                    <Button Content="M"/>
                    <Button Content="SPACE" Width="150"/>
                </StackPanel>
            </ScrollViewer>
            
            
        </Grid>

        <!--SUGGESTION LIST-->
        <Grid Grid.Row="1" Grid.Column="1" Background="DarkGray">

            <ListView Name="SuggestionBox" ItemsSource="{Binding SuggestionsList}" Initialized="SuggestionBox_Initialized" Background="DarkGray" HorizontalContentAlignment="Center" >
                <ListView.ItemContainerStyle>
                    <Style>
                        <Setter Property="Grid.Column" Value="{Binding ColumnIndex}" />
                        <Setter Property="Grid.Row" Value="{Binding RowIndex}" />
                        <Setter Property="Grid.ColumnSpan" Value="2" />
                        <Setter Property="Grid.RowSpan" Value="3" />
                        <Setter Property="eyeX:Behavior.Activatable" Value="Default" />
                        <EventSetter Event="eyeX:Behavior.Activate" Handler="OnEyeXActivate" />
                    </Style>
                </ListView.ItemContainerStyle>

            </ListView>

        </Grid>
        <!--SUGGESTION LIST END-->
        
        <!--BODY END-->

        <!--FOOTER START-->
        <Grid Name="Footer" Grid.Row="2" Grid.Column="0">
            <autocomplete:AutoComplete x:Name="autocompleteInput" TextChanged="autocompleteInput_TextChanged" Text="{Binding MessageToSend}"/>
        </Grid>

        <Grid Name="FooterRight" Grid.Row="2" Grid.Column="1">
            <Button Name="SendSMS" eyeX:Behavior.Activatable="Default" eyeX:Behavior.Activate="OnSendSMS" Click="OnSendSMS" Height="150">
                <TextBlock FontSize="40" FontWeight="Bold">Send SMS</TextBlock>
            </Button>
            

        </Grid>
        <!--FOOTER ENDS-->
        
    </Grid>
</Window>
